{
    "app-id": "io.github.ImEditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "imeditor",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/io/github/ImEditor/"
    ],
    "modules": [
    	{
	    "name": "python3-Pillow",
	    "buildsystem": "simple",
	    "build-commands": [
		"pip3 install --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"Pillow==8.1.0\""
	    ],
	    "sources": [
		{
		    "type": "file",
		    "url": "https://files.pythonhosted.org/packages/73/59/3192bb3bc554ccbd678bdb32993928cb566dccf32f65dac65ac7e89eb311/Pillow-8.1.0.tar.gz",
		    "sha256": "887668e792b7edbfb1d3c9d8b5d8c859269a0f0eba4dda562adb95500f60dbba"
		}
	    ]
	},
        {
            "name": "imeditor",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ImEditor/ImEditor"
                }
            ]
        }
    ]
}
