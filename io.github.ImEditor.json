{
    "app-id": "io.github.ImEditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "imeditor",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/io/github/ImEditor/"
    ],
    "modules": [
    	{
	    "name": "python3-Pillow",
